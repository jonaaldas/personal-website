{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"inlineSourceMap": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"strict": false,
		"lib": ["ES2021.String", "dom", "dom.iterable"],
		"plugins": [
			{
				"name": "typescript-strict-plugin"
			}
		]
	},
	"include": ["src/**/*"]
}
